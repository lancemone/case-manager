<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mone.server.casemanagerstart.user.mapper.UserTeamMapper">

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
                    create_time,
                    update_time,
                id, uid, tid, leader
        </sql>

        <select id="getUserTeamById" resultType="com.mone.server.casemanagerstart.user.vo.UserTeamQueryVo">
            select
            <include refid="Base_Column_List"/>
            from cmu_user_team where id = #{id}
        </select>

        <select id="getUserTeamPageList" parameterType="com.mone.server.casemanagerstart.user.param.UserTeamPageParam" resultType="com.mone.server.casemanagerstart.user.vo.UserTeamQueryVo">
            select
            <include refid="Base_Column_List"/>
            from cmu_user_team
        </select>

</mapper>
