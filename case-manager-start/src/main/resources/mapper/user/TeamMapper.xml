<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mone.server.casemanagerstart.user.mapper.TeamMapper">

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
                    create_time,
                    update_time,
                id, name, remarks, address
        </sql>

        <select id="getTeamById" resultType="com.mone.server.casemanagerstart.user.vo.TeamQueryVo">
            select
            <include refid="Base_Column_List"/>
            from cmu_team where id = #{id}
        </select>

        <select id="getTeamPageList" parameterType="com.mone.server.casemanagerstart.user.param.TeamPageParam" resultType="com.mone.server.casemanagerstart.user.vo.TeamQueryVo">
            select
            <include refid="Base_Column_List"/>
            from cmu_team
        </select>

</mapper>
