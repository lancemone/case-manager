<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mone.server.casemanagerstart.user.mapper.UserMapper">

        <!-- 通用查询结果列 -->
        <sql id="Base_Column_List">
                    create_time,
                    update_time,
                id, username, password, email, phone, salt, verify, first_login, enable
        </sql>

        <select id="getUserById" resultType="com.mone.server.casemanagerstart.user.vo.UserQueryVo">
            select
            <include refid="Base_Column_List"/>
            from cmu_user where id = #{id}
        </select>

        <select id="getUserPageList" parameterType="com.mone.server.casemanagerstart.user.param.UserPageParam" resultType="com.mone.server.casemanagerstart.user.vo.UserQueryVo">
            select
            <include refid="Base_Column_List"/>
            from cmu_user
        </select>

</mapper>
