<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mone.server.casemanagerstart.user.mapper.UserMapper">

        <select id="getUserInfoById" resultType="com.mone.server.casemanagerstart.user.entity.User">
            select u.id, u.username, r.id, r.remarks from cmu_user u, cmu_role r where u.id = #{id} and r.id in (select * from cmu_user_role ur where ur.user_id = #{id});
        </select>

        <select id="getUserPageList" parameterType="com.mone.server.casemanagerstart.user.param.UserPageParam" resultType="com.mone.server.casemanagerstart.user.entity.User">
            select
            *
            from cmu_user
        </select>

</mapper>
